@{
}

@model FilmCollection.Models.ApplicationResponse


<form asp-action="movieForm" method="post">
    <div>
        <label asp-for="Category">Category:</label>
        <input required asp-for="Category" />
    </div>

    <div>
        <label asp-for="Title">Title:</label>
        <input required asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input required asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input required asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating">Rating:</label>
        <select required asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25"/>
    </div>


    <button type="submit">Submit Your Application</button>
</form>
